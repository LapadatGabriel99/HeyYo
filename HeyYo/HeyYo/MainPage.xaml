<?xml version="1.0" encoding="utf-8" ?>
<reactiveui:ReactiveContentPage
             x:TypeArguments="viewModel:MainViewModel"
             xmlns:viewModel="clr-namespace:HeyYo.ViewModels"
             xmlns:reactiveui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"             
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="HeyYo.MainPage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Frame               
               HasShadow="True"               
               Grid.Row="0"
               BackgroundColor="DodgerBlue">
            <Label Text="{Binding Title}" VerticalOptions="Center"
                   HorizontalOptions="Center" TextColor="GhostWhite"
                   FontSize="Large"/>
        </Frame>

        <StackLayout Grid.Row="1" Margin="0, 50, 0, 0">

            <Frame HasShadow="True" Margin="15, 10, 15, 10" BorderColor="AliceBlue">
                <StackLayout>
                    <Entry Placeholder="Username" TextColor="Black" 
                           Margin="5, 5, 5, 15"/>
                    <Entry Placeholder="Password" TextColor="Black"
                           IsPassword="True"
                           Margin="5, 5, 5, 15"/>

                    <Button CornerRadius="10" Text="Login"
                            BackgroundColor="DodgerBlue"
                            TextColor="GhostWhite"
                            Margin="10, 20, 10, 5"
                            FontSize="Medium"
                            />
                </StackLayout>
            </Frame>
            
            <!-- Place new controls here -->
            <Label Text="Welcome to Xamarin.Forms!" 
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"/>
        </StackLayout>
        
    </Grid>

</reactiveui:ReactiveContentPage>
